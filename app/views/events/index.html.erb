<div data-controller = "search">
  <% form_with url: events_path, data: { action = "submit->search#submit" } do |f| %>
  <% f.text_field :query, data: { target: "search.input" } %>
  <% f.submit "Submit" %>
<% end %>

  <ul data-search-target="list">
  </ul>
</div>

<div class = "event">
  <% @events.each do |x| %>
    <p id="name"><%= x.name %>
    <%= link_to event_bookmarks_path(x, @bookmark), data: {turbo_method: :post} do%>
      <i class="fa-regular fa-bookmark"></i>
    <% end %>
    </p>
  <% end %>
</div>
