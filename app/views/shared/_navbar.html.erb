<div class="navbar navbar-expand-sm navbar-light navbar-lewagon" style="padding:0">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "quickstart_logo.png", class: "logo" %>
    <% end %>

<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
  <% if current_user %>
      <% if current_user.photo.key %>
        <%= cl_image_tag current_user.photo.key, class: "avatar", crop: :fill %>
      <% else %>
        <%= image_tag "https://d32ogoqmya1dw8.cloudfront.net/images/serc/empty_user_icon_256.v2.png", alt: "profile", class: "avatar" %>
      <% end %>
  <% else %>
        <%= image_tag "https://d32ogoqmya1dw8.cloudfront.net/images/serc/empty_user_icon_256.v2.png", alt: "profile", class: "avatar" %>
  <% end %>
</button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
        <div class = "navbarrange">
          <li class="nav-item active" style="text-align:right">
              <%= link_to events_path, class: "dropdown-item" do%>
              <i class="fa-solid fa-house"></i> Home
              <% end %>
              <%= link_to profile_path, class: "dropdown-item" do%>
              <i class="fa-solid fa-user"></i> Profile
              <% end %>
              <%= link_to about_path, class: "dropdown-item" do%>
              <i class="fa-solid fa-house"></i> About
              <% end %>
              <%= link_to destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item logout" do%>
              <i class="fa-solid fa-right-from-bracket"></i> Log out
              <% end %>
          </li>

        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link", style: "text-align:right" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
